<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wechat.gatingsystem.dao.DoorInfoDAO">
	<!-- mybatis 映射文件 相当于DAO的实现 每一个id相当于一个方法 -->
	<select id="findAll" resultType="doorInfo">
		select * from door_info
	</select>

	<select id="finddoorByID" parameterType="int" resultType="DoorInfo">
		select * from door_info where door_id = #{doorID}
	</select>

	<insert id="insertDoorInfo" parameterType="doorInfo">
		insert into door_info(door_name, door_create_time ) values(#{doorName}, #{doorCreateTime})
	</insert>

	<delete id="deleteDoorByName" parameterType="String">
		delete from door_info where door_name = #{doorName}
	</delete>

	<!--<update id="updateDoorInfoByID" parameterType="doorInfo">
		update door_info set
		door_name = #{doorName},
		door_location = #{doorLocation},
		door_more_info = #{doorMoreInfo}
	</update>-->

</mapper>